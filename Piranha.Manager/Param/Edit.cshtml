@* Generator: WebPage *@

@inherits Piranha.Manager.Templates.ParamEdit
@{
    Layout = "~/Manager/Shared/_Layout.cshtml" ;
}
@section Toolbar {
<div class="toolbar">
    <div class="inner">
        <ul>
            <li><a class="save submit">@Piranha.Resources.Global.ToolbarSave</a></li>
            @if (Model.Param.Id != Guid.Empty && !Model.Param.IsLocked) {
            <li><a href="@Href("~/manager/param/edit/delete/" + Model.Param.Id)" class="delete">@Piranha.Resources.Global.ToolbarDelete</a></li>
            }
            <li><a href="@Href("~/manager/param")" class="back">@Piranha.Resources.Global.ToolbarBack</a></li>
            @if (Model.Param.Id != Guid.Empty) {
            <li><a href="@Href("~/manager/param/edit/" + Model.Param.Id)" class="refresh">@Piranha.Resources.Global.ToolbarReload</a></li>
            }
        </ul>
        <div class="clear"></div>
    </div>
</div>
}
<form method="post">
@Form.Action("Save")
@Form.HiddenFor(m => m.Param.Id)
@Form.HiddenFor(m => m.Param.IsLocked)
<div class="grid_12">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Global.Information</h2></div>
        <div class="inner">
            <ul class="form">
                <li>
                    @Form.LabelFor(m => m.Param.Name, Piranha.Resources.Settings.ParamName)
                    <div class="input">
                        @if (!Model.Param.IsLocked) {
                            @Form.TextBoxFor(m => m.Param.Name)
                        } else {
                            @Form.TextBoxFor(m => m.Param.Name, new { @disabled = "disabled" })
                            @Form.HiddenFor(m => m.Param.Name)
                        }
                    </div>
                    @Form.ValidationMessageFor(m => m.Param.Name)
                </li>
                <li>
                    @Form.LabelFor(m => m.Param.Value, Piranha.Resources.Settings.ParamValue)
                    <div class="input">
                        @if (Model.Param.Name != "SITE_VERSION") {
                            @Form.TextBoxFor(m => m.Param.Value)
                        } else {
                            @Form.TextBoxFor(m => m.Param.Value, new { @disabled = "disabled" })
                            @Form.HiddenFor(m => m.Param.Value)
                        } 
                    </div>
                </li>
                <li>
                    @Form.LabelFor(m => m.Param.Description, Piranha.Resources.Settings.ParamDescription)
                    <div class="input">
                        @if (!Model.Param.IsLocked) {
                            @Form.TextAreaFor(m => m.Param.Description, 
                                new { @rows = 3, @placeholder = Piranha.Resources.Global.Optional })
                        } else {
                            @Form.TextAreaFor(m => m.Param.Description, 
                                new { @rows = 3, @disabled = "disabled", @placeholder = Piranha.Resources.Global.Optional })
                            @Form.HiddenFor(m => m.Param.Description)
                        }
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
</form>

@* Generator: WebPage *@

@inherits Piranha.WebPages.ContentPage<Piranha.Manager.Models.CategoryListModel>
@{
    Page.Title = @Piranha.Manager.Resources.Category.ListTitle ;
    Layout = "~/Manager/Shared/_Layout.cshtml" ;
}
@section Head {
    <script type="text/javascript">
        $(document).ready(function () {
            // Set the selected template id
            $(".delete").click(function () {
                return confirm("@Piranha.Resources.Category.MessageDeleteConfirm") ;
            });

            // Setup template list
            var options = {
                listClass:  'list-js',
                searchId: 'search',
                valueNames: ['name', 'updated', 'created']
            };
            new List('list', options);
        });
    </script>
}
@section Toolbar { 
<div class="toolbar">
    <div class="inner">
        <ul>
            <li><a href="@Href("~/manager/category/edit")" class="add">@Piranha.Manager.Resources.Toolbar.Add</a></li>
            <li><a href="@Href("~/manager/category")" class="refresh">@Piranha.Manager.Resources.Toolbar.Reload</a></li>
        </ul>
        <button class="search" title="@Piranha.Manager.Resources.Toolbar.Search"></button>@Html.TextBox("search")
        <div class="clear"></div>
    </div>
</div>
}
<div class="grid_12">
    <table id="list" class="list">
        <thead>
            <tr>
                <th><span class="sort asc" data-sort="name">@Piranha.Manager.Resources.Global.Name</span></th>
                <th class="date"><span class="sort" data-sort="updated">@Piranha.Manager.Resources.Global.Updated</span></th>
                <th class="date"><span class="sort" data-sort="created">@Piranha.Manager.Resources.Global.Created</span></th>
                <th class="one"></th>
            </tr>
        </thead>
        <tbody class="list-js">
            @foreach (var c in Model.Categories) {
            <tr>
                <td class="name"><a href="@Href("~/manager/category/edit/" + c.Id)">@c.Name</a></td>
                <td class="updated">@c.Updated.ToString("yyyy-MM-dd")</td>
                <td class="created">@c.Created.ToString("yyyy-MM-dd")</td>
                <td class="buttons">
                    <a class="icon delete" href="@Href("~/manager/category/edit/delete/" + c.Id)"></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
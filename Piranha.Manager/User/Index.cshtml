@* Generator: WebPage *@

@inherits Piranha.WebPages.ContentPage<Piranha.Manager.Models.UserListModel>
@using Piranha.Manager
@{
    Page.Title = @Piranha.Manager.Resources.User.ListTitle ;
    Layout = "~/Manager/Shared/_Layout.cshtml" ;
    
    var msg = Request["msg"] ;
    if (!String.IsNullOrEmpty(msg)) {
        if (msg.ToLower() == "deleted") {
            this.SuccessMessage(Piranha.Manager.Resources.User.MessageDeleted) ;
        } else if (msg.ToLower() == "notdeleted") {
            this.ErrorMessage(Piranha.Manager.Resources.User.MessageNotDeleted) ;
        }
    }
}
@section Head {
    <script type="text/javascript">
        $(document).ready(function () {
            var options = {
                listClass: 'list-js',
                searchId: 'search',
                valueNames: ['login', 'name', 'group', 'updated', 'created']
            };
            new List('list', options);
        });
    </script>
}
@section Toolbar {
<div class="toolbar">
    <div class="inner">
        <ul>
            <li id="add"><a href="@Href("~/manager/user/edit")" class="add">@Piranha.Manager.Resources.Toolbar.Add</a></li>
            <li><a href="@Href("~/manager/user")" class="refresh">@Piranha.Manager.Resources.Toolbar.Reload</a></li>
        </ul>
        <button class="search"></button>@Html.TextBox("search")
        <div class="clear"></div>
    </div>
</div>
}

<div class="grid_12">
    <table id="list" class="list">
        <thead>
            <tr>
                <th></th>
                <th><span class="sort asc" data-sort="login">@Piranha.Manager.Resources.Global.Username</span></th>
                <th><span class="sort" data-sort="name">@Piranha.Manager.Resources.Global.Name</span></th>
                <th><span class="sort" data-sort="group">@Piranha.Manager.Resources.Global.Group</span></th>
                <th class="date"><span class="sort" data-sort="updated">@Piranha.Manager.Resources.Global.Updated</span></th>
                <th class="date"><span class="sort" data-sort="created">@Piranha.Manager.Resources.Global.Created</span></th>
                <th class="one"></th>
            </tr>
        </thead>
        <tbody class="list-js">
            @foreach (var user in Model.Users) {
            <tr>
                <td class="gravatar">
                    @if (!String.IsNullOrEmpty(user.Email)) {
                        <img src="@UI.Gravatar.Image(user.Email, 30)" alt="Gravatar for @user.Email" />
                    }
                </td>
                <td class="login">
                    @if (User.IsMember(user.GroupId.Value)) {
                    <a href="@Href("~/manager/user/edit/" + user.Id)">@user.Login</a>
                    } else {
                    @user.Login
                    }
                </td>        
                <td class="name">@user.Firstname @user.Surname</td>
                <td class="group">@user.Group.Name</td>
                <td class="updated">@user.Updated.ToString("yyyy-MM-dd")</td>
                <td class="created">@user.Created.ToString("yyyy-MM-dd")</td>
                <td class="buttons">
                    @if (User.IsMember(user.GroupId.Value)) {
                    <a class="icon delete" href="@Href("~/manager/user/edit/delete/" + user.Id + "/true")" title="@Piranha.Manager.Resources.User.Delete"></a>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

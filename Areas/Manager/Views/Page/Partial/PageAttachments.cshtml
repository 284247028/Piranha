<div id="attachments">
</div>
<table class="list">
    <thead>
        <tr>
            <th></th>
            <th>Namn</th>
            <th>Typ</th>
            <th>Uppdaterad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td colspan="4" style="text-align: right">
                <a id="pattach" class="btn">Bifoga uppladdat innehåll</a>
                <a id="pupload" class="btn">Ladda upp nytt</a>
            </td>
        </tr>
        @foreach (var c in Model.AttachedContent) {
        <tr>
            <td><img src="@Url.Content("~/thumb/" + c.Id + "/50")" /></td>
            <td>@c.Filename</td>
            <td>@c.Type</td>
            <td>@c.Updated.ToString("yyyy-MM-dd")</td>
            <td class="buttons one">
                <a class="icon delete"></a></td>
        </tr>
        }
    </tbody>
</table>
@{
    ViewBag.Title = @Piranha.Resources.Account.Title ;
    Layout = "" ;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <title>@ViewBag.Title</title>
	<link rel="shortcut icon" href="@Url.Content("~/Areas/Manager/Content/Img/favicon.ico")">
    <link rel="apple-touch-icon" href="@Url.Content("~/Areas/Manager/Content/Img/apple-touch-icon.png")"/>
    <link href="@Url.Content("~/Areas/Manager/Content/Css/Style.ashx")" rel="stylesheet" type="text/css"/>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/Manager/Content/Js/jquery.manager.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".message").click(function () { $(this).fadeOut("medium"); });

            if ($("#sysMsg").text() != "") {
                floatBox.show("boxMessage");
            }

            $("#login").focus();
        });
    </script>
</head>
<body>
    <div class="container_12">
        <div class="grid_4 box login">
            <div class="title"><h2>@Piranha.Resources.Account.Title</h2></div>
            <div class="inner">
                @{ Html.BeginForm("Login", "Account") ; }
                @Html.Hidden("returnaction", "index")
                @Html.Hidden("returncontroller", "page")
                <ul class="form">
                    <li><label>@Piranha.Resources.Account.Username</label>
                        <div class="input"><input id="login" name="login" type="text" /></div></li>
                    <li><label>@Piranha.Resources.Account.Password</label>
                        <div class="input"><input name="password" type="password" /></div></li>
                </ul>
                <button class="btn right">@Piranha.Resources.Account.Login</button>
                @{ Html.EndForm() ; }
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <div id="boxMessage" class="floatbox">
        <div class="bg"></div>
        <div class="box">
            <div class="title"><h2>@Piranha.Resources.Global.PopupMessageTitle</h2></div>
            <div class="inner" style="width: 360px;min-height:60px;text-align:center">
                <p id="sysMsg">@ViewBag.Message</p>
            </div>
        </div>
    </div>
</body>
</html>
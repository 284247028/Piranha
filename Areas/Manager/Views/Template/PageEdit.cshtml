@model Piranha.Models.Manager.TemplateModels.PageEditModel
@{
    ViewBag.Selected = "Page" ;
}
@section Toolbar {
<div class="grid_12 toolbar">
    <div class="inner">
        <ul>
            <li><a class="save submit"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarSave</p></div></li>
            <li><a href="@Url.Action("DeletePage", new { id = Model.Template.Id })" class="delete" title=""></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarDelete</p></div></li>
            <li><a href="@Url.Action("Index", "Page")#templates" class="back"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarBack</p></div></li>
            <li><a href="" class="refresh"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarReload</p></div></li>
            <li><a href="" class="info"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarHelp</p></div></li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
}

@{ Html.BeginForm("Page") ; }
<div>
    @Html.HiddenFor(m => m.Template.Id)
    @Html.HiddenFor(m => m.Template.IsNew)
    @Html.HiddenFor(m => m.Template.Created)
    @Html.HiddenFor(m => m.Template.Updated)
    @Html.HiddenFor(m => m.Template.CreatedBy)
    @Html.HiddenFor(m => m.Template.UpdatedBy)
</div>
<div class="grid_9">
    <div class="box expandable">
        <div class="title"><h2>@Piranha.Resources.Global.Information</h2></div>
        <div class="inner">
            <ul class="form">
                <li>@Html.LabelFor(m => m.Template.Name.Singular)
                    <div class="input">
                        @Html.TextBoxFor(m => m.Template.Name.Singular)</div>
                    @Html.ValidationMessageFor(m => m.Template.Name.Singular)
                </li>
                <li>@Html.LabelFor(m => m.Template.Name.Plural)
                    <div class="input">
                        @Html.TextBoxFor(m => m.Template.Name.Plural)</div>
                    @Html.ValidationMessageFor(m => m.Template.Name.Plural)
                </li>
                <li>@Html.LabelFor(m => m.Template.Description)
                    <div class="input">
                        @Html.TextAreaFor(m => m.Template.Description, 
                            new { @placeholder = Piranha.Resources.Global.Optional })</div>
                </li>
            </ul>
            <ul class="form optional">               
                <li>@Html.LabelFor(m => m.Template.Preview)
                    <div class="input">
                        @Html.TextAreaFor(m => m.Template.Preview, new { @rows = 8} )</div>
                </li>                
            </ul>
        </div>
    </div>
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Global.Advanced</h2></div>
        <div class="inner">
            <ul class="form">
                <li>@Html.LabelFor(m => m.Template.Controller)
                    <div class="right">
                        @Html.CheckBoxFor(m => m.Template.ShowController)</div>
                    <div class="input short">
                        @Html.TextBoxFor(m => m.Template.Controller, 
                            new { @placeholder = Piranha.Resources.Global.Optional })</div>
                </li>
                <li>@Html.LabelFor(m => m.Template.Redirect)
                    <div class="right">
                        @Html.CheckBoxFor(m => m.Template.ShowRedirect)</div>
                    <div class="input short">
                        @Html.TextBoxFor(m => m.Template.Redirect, 
                            new { @placeholder = Piranha.Resources.Global.Optional })</div>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="grid_3">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Global.Regions</h2></div>
        <div class="inner">
            <div id="region_data"></div>
            <ul id="pageregions" class="list buttons">
                @foreach (var region in Model.Template.PageRegions) {
                <li><span>@region</span><button class="btn delete right remove-region"></button></li>
                }
            </ul>
            <div class="input">
                <input id="pr_name" type="text" placeholder="@Piranha.Resources.Page.RegionPlaceholder" /></div>
            <button id="pr_add" class="btn right">@Piranha.Resources.Global.Add</button>
            <div class="clear"></div>
        </div>
    </div>
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Global.Properties</h2></div>
        <div class="inner">
            <ul id="properties" class="list buttons">
                @foreach (var property in Model.Template.Properties) {
                <li><span>@property</span><button class="btn delete right remove-region"></button></li>
                }
            </ul>
            <div class="input">
                <input id="po_name" type="text" placeholder="@Piranha.Resources.Page.PropertyPlaceholder" /></div>
            <button id="po_add" class="btn right">@Piranha.Resources.Global.Add</button>
            <div class="clear"></div>
         </div>
    </div>
</div>
@{ Html.EndForm() ; }
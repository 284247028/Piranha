@model Piranha.Models.Manager.SettingModels.ListModel
@{
    ViewBag.Title = @Piranha.Resources.Settings.ListTitle ;
    ViewBag.Selected = "System" ;
}
@section Head {
    <script type="text/javascript">
        $(document).ready(function () {
            //
            // Change toolbar action according to selected tab.
            //
            $(".tabs a").click(function () {
                switch ($(this).attr("href")) {
                    case "#users":
                        $(".toolbar .add").attr("href", "@Url.Action("user")");
                        $(".toolbar form").attr("action", "@Url.Action("searchuser")");
                        $("#add p").text("@Piranha.Resources.Settings.ToolbarAddUser");
                        break;
                    case "#groups":
                        $(".toolbar .add").attr("href", "@Url.Action("group")");
                        $(".toolbar form").attr("action", "@Url.Action("searchgroup")");
                        $("#add p").text("@Piranha.Resources.Settings.ToolbarAddGroup");
                        break;
                    case "#params":
                        $(".toolbar .add").attr("href", "@Url.Action("param")");
                        $(".toolbar form").attr("action", "@Url.Action("searchparam")");
                        $("#add p").text("@Piranha.Resources.Settings.ToolbarAddParam");
                        break;
                    case "#access":
                        $(".toolbar .add").attr("href", "@Url.Action("access")");
                        $(".toolbar form").attr("action", "@Url.Action("searchaccess")");
                        $("#add p").text("@Piranha.Resources.Settings.ToolbarAddAccess");
                        break;
                }
                positionTooltips();
            });

            //
            // Check what tab should be initially selected
            //
            if (window.location.hash) {
                var hash = window.location.hash ;

                $.each($(".tabs a"), function(i, e) {
                    if ($(e).attr("href") == hash)
                        $(e).click();
                });
            }

            var userOptions = {
                listClass: 'list-js',
                valueNames: ['login', 'name', 'group', 'updated', 'created']
            };
            var userList = new List('user-list', userOptions);
        });
    </script>
    @if (ViewBag.SelectedTab != "") {
    <script type="text/javascript">
        $(document).ready(function () { 
            $.each($(".tabs a"), function(i, e) {
                if ($(e).attr("href") == "#@ViewBag.SelectedTab")
                    $(e).click();
            });
        });
    </script>
    }
}
@section Toolbar {
<div class="grid_12 toolbar">
    <div class="inner">
        <ul>
            <li id="add"><a href="@Url.Action("user")" class="add"></a>
                <div class="tooltip"><p>@Piranha.Resources.Settings.ToolbarAddUser</p></div></li>
            <li><a href="@Url.Action("index")" class="refresh"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarReload</p></div></li>
            <li><a href="" class="info"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarHelp</p></div></li>
        </ul>
        @using (Html.BeginForm("SearchUser", "Settings")) {
            <button class="search"></button>@Html.TextBox("filter", "", new { @class = "filter" })
        }
        <div class="clear"></div>
    </div>
</div>
}

<div class="grid_12">
    <ul class="tabs">
        @if (User.HasAccess("ADMIN_USER")) {
        <li><a class="selected" href="#users">@Piranha.Resources.Settings.ListTabUsers</a></li>
        }
        @if (User.HasAccess("ADMIN_GROUP")) {
        <li><a href="#groups">@Piranha.Resources.Settings.ListTabGroups</a></li>
        }
        @if (User.HasAccess("ADMIN_ACCESS")) {
        <li><a href="#access">@Piranha.Resources.Settings.ListTabAccess</a></li>
        }
        @if (User.HasAccess("ADMIN_PARAM")) {
        <li><a href="#params">@Piranha.Resources.Settings.ListTabParams</a></li>
        }
    </ul>
    @if (User.HasAccess("ADMIN_USER")) {
    <a id="user-list" name="users">
        <table class="list tabbed">
            <thead>
                <tr>
                    <th></th>
                    <th><span class="sort asc" data-sort="login">@Piranha.Resources.Global.Username</span></th>
                    <th><span class="sort" data-sort="name">@Piranha.Resources.Global.Name</span></th>
                    <th><span class="sort" data-sort="group">@Piranha.Resources.Global.Group</span></th>
                    <th class="date"><span class="sort" data-sort="updated">@Piranha.Resources.Global.Updated</span></th>
                    <th class="date"><span class="sort" data-sort="created">@Piranha.Resources.Global.Created</span></th>
                    <th class="one"></th>
                </tr>
            </thead>
            <tbody class="list-js">
                @foreach (var user in Model.Users) {
                <tr>
                    <td class="gravatar">
                        @if (!String.IsNullOrEmpty(user.Email)) {
                            <img src="@UI.Gravatar.Image(user.Email, 30)" alt="Gravatar for @user.Email" />
                        }
                    </td>
                    <td class="login">
                        @if (User.IsMember(user.GroupId)) {
                        <a href="@Url.Action("user", new { id = user.Id })">@user.Login</a>
                        } else {
                        @user.Login
                        }
                    </td>        
                    <td class="name">@user.Firstname @user.Surname</td>
                    <td class="group">@user.GroupName</td>
                    <td class="updated">@user.Updated.ToString("yyyy-MM-dd")</td>
                    <td class="created">@user.Created.ToString("yyyy-MM-dd")</td>
                    <td class="buttons">
                        @if (User.IsMember(user.GroupId)) {
                        <a class="icon delete" href="@Url.Action("deleteuser", new { id = user.Id })"></a>
                        }
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6"></td>
                </tr>
            </tfoot>
        </table>
    </a>
    }
    @if (User.HasAccess("ADMIN_GROUP")) {
    <a name="groups" class="hidden">
        <table class="list tabbed">
            <thead>
                <tr>
                    <th>@Piranha.Resources.Global.Name</th>
                    <th class="date">@Piranha.Resources.Global.Updated</th>
                    <th class="date">@Piranha.Resources.Global.Created</th>
                    <th class="one"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.Groups) {
                <tr>
                    <td@(group.Level > 1 ? " class=level" + group.Level : "")>
                        @if (User.IsMember(group.Id)) {
                        <a href="@Url.Action("group", new { id = group.Id})">@group.Name</a>
                        } else {
                        @group.Name
                        }
                    </td>
                    <td>@group.Updated.ToString("yyyy-MM-dd")</td>
                    <td>@group.Created.ToString("yyyy-MM-dd")</td>
                    <td class="buttons">
                        @if (User.IsMember(group.Id)) {
                        <a class="icon delete" href="@Url.Action("deletegroup", new { id = group.Id })"></a>
                        }
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6"></td>
                </tr>
            </tfoot>
        </table>
    </a>
    }
    @if (User.HasAccess("ADMIN_ACCESS")) {
    <a name="access" class="hidden">
        <table class="list tabbed">
            <thead>
                <tr>
                    <th>@Piranha.Resources.Global.Name</th>
                    <th>@Piranha.Resources.Global.Group</th>
                    <th class="date">@Piranha.Resources.Global.Updated</th>
                    <th class="date">@Piranha.Resources.Global.Created</th>
                    <th class="one"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var access in Model.Access) {
                <tr>
                    <td><a href="@Url.Action("access", new { id = access.Id })">@access.Function</a></td>
                    <td>@access.GroupName</td>
                    <td>@access.Updated.ToString("yyyy-MM-dd")</td>
                    <td>@access.Created.ToString("yyyy-MM-dd")</td>
                    <td class="buttons">
                        @if (!access.IsLocked) {
                        <a class="icon delete" href="@Url.Action("deleteaccess", new { id = access.Id })"></a>
                        }
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6"></td>
                </tr>
            </tfoot>
        </table>
    </a>
    }
    @if (User.HasAccess("ADMIN_PARAM")) {
    <a name="params" class="hidden">
        <table class="list tabbed">
            <thead>
                <tr>
                    <th>@Piranha.Resources.Global.Name</th>
                    <th class="date">@Piranha.Resources.Global.Updated</th>
                    <th class="date">@Piranha.Resources.Global.Created</th>
                    <th class="one"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var param in Model.Params) {
                <tr>
                    <td><a href="@Url.Action("param", new { id = param.Id })">@param.Name</a></td>
                    <td>@param.Updated.ToString("yyyy-MM-dd")</td>
                    <td>@param.Created.ToString("yyyy-MM-dd")</td>
                    <td class="buttons">
                        @if (!param.IsLocked) {
                        <a class="icon delete" href="@Url.Action("deleteparam", new { id = param.Id })"></a>
                        }
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6"></td>
                </tr>
            </tfoot>
        </table>
    </a>
    }
</div>
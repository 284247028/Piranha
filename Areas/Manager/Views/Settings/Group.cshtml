@model Piranha.Models.Manager.SettingModels.GroupEditModel
@{
    ViewBag.Selected = "System" ;
}
@section Toolbar {
<div class="grid_12 toolbar">
    <div class="inner">
        <ul>
            <li><a class="save submit"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarSave</p></div></li>
            <li><a href="@Url.Action("deletegroup", new { id = Model.Group.Id })" class="delete"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarDelete</p></div></li>
            <li><a href="@Url.Action("index")#groups" class="back"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarBack</p></div></li>
            <li><a href="" class="refresh"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarReload</p></div></li>
            <li><a href="" class="info"></a>
                <div class="tooltip"><p>@Piranha.Resources.Global.ToolbarHelp</p></div></li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
}
@{ Html.BeginForm() ; }
@Html.HiddenFor(m => m.Group.Id)
@Html.HiddenFor(m => m.Group.IsNew)
@Html.HiddenFor(m => m.Group.Created)
<div class="grid_9">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Global.Information</h2></div>
        <div class="inner">
            <ul class="form">
                <li>
                    @Html.LabelFor(m => m.Group.Name)
                    <div class="input">
                        @Html.TextBoxFor(m => m.Group.Name)</div>
                    @Html.ValidationMessageFor(m => m.Group.Name)
                </li>
                <li>
                    @Html.LabelFor(m => m.Group.Description)
                    <div class="input">
                        @Html.TextAreaFor(m => m.Group.Description, 
                            new { @rows = 3, @placeholder = Piranha.Resources.Global.Optional })</div>
                </li>
                <li>
                    @Html.LabelFor(m => m.Group.ParentId)
                    <div class="input">
                        @Html.DropDownListFor(m => m.Group.ParentId, Model.Groups)</div>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="grid_3">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Settings.GroupMembers</h2></div>
        <div class="inner">
            @if (!Model.Group.IsNew) {
            <ul class="list">
                @foreach (var user in Model.Members) {
                <li><a href="@Url.Action("user", new { id = user.Id })">@(!String.IsNullOrEmpty(user.Name) ? user.Name : user.Login)</a></li>
                }
            </ul>
            } else {
                <p><em>@Piranha.Resources.Settings.GroupMembersNew</em></p>
            }
        </div>
    </div>
</div>
@{ Html.EndForm() ; }
